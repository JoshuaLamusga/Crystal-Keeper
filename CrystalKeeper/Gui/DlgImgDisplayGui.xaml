<Window x:Class="CrystalKeeper.Gui.DlgImgDisplayGui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CrystalKeeper.Gui"
        Title="Images" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Name="GuiGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Grid.Column="0"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
        <ListBox Name="GuiList"
            HorizontalAlignment="Left"
            Height="{Binding ElementName=GuiGrid, Path=ActualHeight}"
            VerticalAlignment="Top"
            Width="100px"/>
        </ScrollViewer>
        <local:ZoomBorder ClipToBounds="True">
        <Image Name="GuiImage"
                Grid.Column="1"
                Stretch="None"/>
        </local:ZoomBorder>
    </Grid>
</Window>
